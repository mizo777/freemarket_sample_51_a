%body.signup-login
  %header.signup-login__header
    = render partial: 'signup/header'
    %nav.progress-bar
      %ul.progress-bar__status
        %li.complete
          会員情報
          .progress-bar__status__circle
          .progress-bar__status__line
        %li.complete
          電話番号認証
          .progress-bar__status__circle
          .progress-bar__status__line
        %li.active
          お届け先住所入力
          .progress-bar__status__circle
          .progress-bar__status__line
        %li
          支払い方法
          .progress-bar__status__circle
          .progress-bar__status__line
        %li
          完了
          .progress-bar__status__circle
          .progress-bar__status__line.end      
  %main.signup-login__box
    .signup-login__box__title
      %h2 住所入力
    %form{action: "/", method: "post", class: "form-format"} 
      .form-format__content
        .field.field-first
          %label お名前（全角）
          %span.require 必須
          %br
          %input{name: "", placeholder: "例）山田"}
          %br
          %input{name: "", placeholder: "例）彩"}
          %br          
        .field  
          %label お名前カナ（全角）
          %span.require 必須
          %br
          %input{name: "", placeholder: "例）ヤマダ"}
          %input{name: "", placeholder: "例）アヤ"}
          %br          
        .field  
          %label 郵便番号
          %span.require 必須
          %br
          %input{name: "", placeholder: "例）1234-567"}
          %br          
        .field  
          %label 都道府県
          %span.require 必須
          %br
          .select-box
            -# active_hashで書き換え（Regionモデル作成済み）
            =fa_icon "chevron-down"
            %select{name: "", class: "select-form"}
          %br          
        .field  
          %label 市区町村
          %span.require 必須
          %br
          %input{name: "", placeholder: "例）横浜市緑区"}
          %br          
        .field  
          %label 番地
          %span.require 必須
          %br
          %input{name: "", placeholder: "例）青山1-1"}
          %br          
        .field  
          %label 建物名
          %span.optional 任意
          %br
          %input{name: "", placeholder: "例）柳ビル103"}
          %br 
        .field  
          %label 電話
          %span.optional 任意
          %br
          %input{name: "", placeholder: "例）09012345678"}
          %br          
        %input{type: "submit", value: "次へ進む"}

  %footer.signup-login__footer
    = render partial: 'signup/footer'

